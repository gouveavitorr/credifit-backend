// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String @id @default(uuid())
  name     String
  cpf      String @unique
  email    String @unique
  password String

  employee Employee?
}

model Employee {
  id        String   @id @default(uuid())
  salary    Float
  company   Company? @relation(fields: [companyId], references: [id])
  companyId String?
  User      User     @relation(fields: [UserId], references: [id])
  UserId    String   @unique

  Loan Loan[]
}

model Company {
  id          String @id @default(uuid())
  cnpj        String
  companyName String

  Employee Employee[]
}

model Loan {
  id           String    @id @default(uuid())
  amount       Float
  dueDate      DateTime?
  parcelAmount Int?
  approved     Boolean

  employee   Employee @relation(fields: [employeeId], references: [id])
  employeeId String
}
